<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CxClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cx_blue</item>
        <item name="colorPrimaryVariant">@color/cx_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cx_dark_blue</item>
    </style>
    
    <style name="Theme.CxClone.Browser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/cx_blue</item>
        <item name="colorPrimaryVariant">@color/cx_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>
