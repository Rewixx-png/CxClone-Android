<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- HEADER: Blue Area -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/cx_blue"
        android:padding="20dp">

        <TextView
            android:text="Cx Проводник"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Circular Storage View -->
        <FrameLayout
            android:id="@+id/circleContainer"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerVertical="true">

            <ProgressBar
                android:id="@+id/storageCircle"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@drawable/circular_progress"
                android:progress="75"
                android:rotation="-90"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                
                <TextView
                    android:id="@+id/percentText"
                    android:text="75%"
                    android:textSize="32sp"
                    android:textColor="#FFF"
                    android:textStyle="bold"/>
                <TextView
                    android:text="Основная..."
                    android:textColor="#DDD"
                    android:textSize="12sp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Stats Right Side -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/circleContainer"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView android:text="Фото      1.7 ГБ" android:textColor="#FFF"/>
            <TextView android:text="Аудио    600 МБ" android:textColor="#FFF" android:layout_marginTop="5dp"/>
            <TextView android:text="Видео     11 ГБ" android:textColor="#FFF" android:layout_marginTop="5dp"/>

            <Button
                android:text="ОЧИСТКА"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="#00000000"
                android:textColor="#FFF"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#FFF"
                app:strokeWidth="1dp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- TABS -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        app:tabIndicatorColor="@color/cx_blue"
        app:tabSelectedTextColor="@color/cx_blue"
        app:tabTextColor="#757575"/>

    <!-- GRID CONTENT -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:padding="16dp"
        android:background="#FFF">

        <!-- ITEM 1: Main Storage -->
        <LinearLayout
            android:id="@+id/btnMainStorage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground">

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_bg_orange">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_phone_storage"
                    android:layout_gravity="center"/>
            </FrameLayout>
            
            <TextView
                android:text="Основная..."
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- ITEM 2: Downloads -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_bg_blue">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_downloads"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <TextView
                android:text="Загрузки"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Placeholders for layout balance -->
        <Space android:layout_width="0dp" android:layout_columnWeight="1"/>
        <Space android:layout_width="0dp" android:layout_columnWeight="1"/>

    </GridLayout>

</LinearLayout>
